<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.hce" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="HCE">
        <param name="android-package" value="com.megster.cordova.hce.HCEPlugin" />
    </feature>
    <name>HCE Demo</name>
    <description>
        A sample Apache Cordova app demonstrating the Cordova HCE plugin.
    </description>
    <author href="https://github.com/don">
        Don Coleman
    </author>
    <content src="index.html" />
    <allow-intent href="market:*" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="android-minSdkVersion" value="19" />
</widget>
